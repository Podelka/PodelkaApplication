@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@model Podelka.Models.ProductCreateModel
    <div class="profileView clearfix">
        <div class="center">
            @using (Html.BeginForm("Create", "Product", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="leftSidebar createSidebar">
                    <h2>Добавление товара</h2>
                    <img class="leftImg" src="img/shop.png">
                    <hr class="dashedHr" />
                    <input type="submit" name="buttonCreate" id="buttonCreate" value="Добавить товар" style="display:none;" />
                </div>
                <div class="rightContentBlockSmall createBody">
                    <img src="img/280x280.gif">
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Введите название товара" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    @if (Model.RegisterTypeWorkroom == "Отсутсвует")
                    {
                        @:Вы не имеете права продавать изделия по белорусскому законодательсву! Вы размещаете их для демонстрации своих талантов.<br />
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Price, new { placeholder = "Цена" })
                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                    }
                    @Html.DropDownListFor(m => m.SelectedStatusReady, new SelectList(Model.StatusReady, "StatusReadyId", "Name"))
                    @Html.ValidationMessageFor(m => m.SelectedStatusReady, "", new { @class = "text-danger" })<br />
                </div>
                <div class="rightContentBlockBig createBody">
                    @Html.TextAreaFor(m => m.Description, new { placeholder = "Описание товара" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Size1, new { @class = "sizeProduct", maxlength = "4", placeholder = "В" })
                    @Html.ValidationMessageFor(m => m.Size1, "", new { @class = "text-danger" })
                    <div class="sizeLabel">x</div>
                    @Html.TextBoxFor(m => m.Size2, new { @class = "sizeProduct", maxlength = "4", placeholder = "Ш" })
                    @Html.ValidationMessageFor(m => m.Size2, "", new { @class = "text-danger" })
                    <div class="sizeLabel">x</div>
                    @Html.TextBoxFor(m => m.Size3, new { @class = "sizeProduct", maxlength = "4", placeholder = "Г" })
                    @Html.ValidationMessageFor(m => m.Size3, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Weight, new { placeholder = "Вес" })
                    @Html.ValidationMessageFor(m => m.Weight, "", new { @class = "text-danger" })
                    <div class="sizeLabel">Вес:</div>
                    <br />Раздел мастерской: @Model.SectionName<br />
                    @Html.DropDownListFor(m => m.SelectedCategory, new SelectList(Model.Categories, "CategoryId", "Name"))
                    @Html.ValidationMessageFor(m => m.SelectedCategory, "", new { @class = "text-danger" })
                    <div class="sizeLabel">Выберите категорию:</div><br /><br />
                    @if (Model.SectionGender == true)
                    {
                        @Html.DropDownListFor(m => m.SelectedGenderType, new SelectList(Model.GenderTypes, "GenderTypeId", "Name"))
                        @Html.ValidationMessageFor(m => m.SelectedGenderType, "", new { @class = "text-danger" })
                    }
                    @Html.ListBoxFor(m => m.SelectedMaterials, new SelectList(Model.Materials, "MaterialId", "Name"))
                    @Html.ValidationMessageFor(m => m.SelectedMaterials, "", new { @class = "text-danger" })                
                    @Html.TextAreaFor(m => m.KeyWords, new { placeholder = "Ключевые слова" })
                    @Html.ValidationMessageFor(m => m.KeyWords, "", new { @class = "text-danger" })
                    @Html.ActionLink("Прочитайте правила добавления товара", "Rules", "Home")<br />
                    @Html.CheckBoxFor(m => m.AgreeRules)
                    @Html.LabelFor(m => m.AgreeRules)
                    @Html.ValidationMessageFor(m => m.AgreeRules, "", new { @class = "text-danger" })<br />
                </div>
            }
        </div>
    </div>