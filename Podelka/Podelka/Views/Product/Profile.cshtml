@{
    ViewBag.Title = "Продукт";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@model Podelka.Models.ProductProfileModel
    <div class="profileView clearfix">
        <div class="center">
            <div class="leftSidebar">
                <img class="sbAvater" src='~/Content/img/first_workshop.jpg'>
                <span class="sbMakerAfter">Мастерская</span>
                <h3 class="sbName">@Html.ActionLink("" + Model.Workroom.Name + "", "Profile", "Workroom", new { id = Model.WorkroomId }, null)</h3>
                @Html.Partial("_InfoWorkroomGuest", Model.Workroom)
            </div>
            <div class="rightContent productBody clearfix">
                <div class="productContent">
                    <span class="breadcrumbs">Главная / Подарки / Игрушки / Кот-муркот</span>
                    <h1>@Model.Name</h1>
                    <div class="productInfo">
                        <img src="~/Content/img/500x350.gif">
                        <div class="productText">
                            <strong>Цена:</strong> @Model.Price бел.руб<br />
                            <strong>Состояние:</strong> @Model.StatusReady
                            <hr class="dashedHr" />
                            <div class="productDescript">
                                @Model.Description
                            </div>
                            <hr class="dashedHr" />
                            <strong>Материалы:</strong> @Model.Material<br />
                            <strong>Габариты:</strong> @Model.Size см<br />
                            <strong>Вес:</strong> @Model.Weight г<br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>